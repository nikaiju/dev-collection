{
    "name": "Vulkan SDK",
    "id": "vulkan-sdk",
    "version": "1.0.0-alpha",
    "description": "Installs the vulkan graphics engine sdk. See https://vulkan.lunarg.com/home/welcome",

    "containerEnv": {
        "VULKAN_SDK": "/usr/share/vulkan/1.4.313.0/x86_64",
        "PATH": "/usr/share/vulkan/1.4.313.0/x86_64/bin:${PATH}",
        "LD_LIBRARY_PATH": "/usr/share/vulkan/1.4.313.0/x86_64/lib",
        "VK_ADD_LAYER_PATH": "/usr/share/vulkan/1.4.313.0/x86_64/share/vulkan/explicit_layer.d"
    }
}